{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true
    },
    "includes": [
        "src/*.ts",
        "src/**/*.ts",
        "__tests__/*.test.ts",
        "__tests__/**/*.ts"
    ]
}
